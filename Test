cd /tmp
curl -O https://download-ib01.fedoraproject.org/pub/fedora/linux/releases/42/Everything/x86_64/os/Packages/g/grub2-efi-x64-modules-2.12-28.fc42.x86_64.rpm

grub2-install \
  --target=x86_64-efi \
  --efi-directory=/boot/efi \
  --bootloader-id=Nobara \
  --boot-directory=/boot \
  --directory=/usr/lib/grub/x86_64-efi \
  --recheck
